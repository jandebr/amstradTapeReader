<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="export jar" name="AmstradTapeReader">
	<target name="export jar">
		<jar destfile="dist/amstradTapeReader.jar">
			<manifest>
				<attribute name="Main-Class" value="org.maia.amstrad.io.tape.TapeReaderMain" />
				<attribute name="Class-Path" value=". resources/" />
			</manifest>
			<zipfileset src="${libraries.home}/amstradPc/amstradPc.jar" />
			<fileset dir="bin" />
			<fileset dir="resources">
				<include name="icons/*" />
			</fileset>
		</jar>
	</target>
</project>